@model Drink

<div class="col-md-4">
    <div class="card" style="width: 100%;height: 25vw;display: flex;flex-direction: column;">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Card image cap" style="width: 100%;height: 15vw;object-fit: cover;">
        <div class="card-body" style="flex: 1;padding: 15px;">
            <h5 class="card-title">@Model.Name</h5>
            <h4 style="float: right;">@Model.Price.ToString("c")</h4>
            <p class="card-text">@Model.ShortDescription</p>
            @* <a href="#" class="btn btn-primary">Go somewhere</a> *@
        </div>
    </div>
</div>